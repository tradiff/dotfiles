-- vim: se ft=psql :

\pset pager always
\setenv PAGER 'less --ignore-case --LONG-PROMPT --quit-if-one-screen --no-init --chop-long-lines --tabs=4'

\set QUIET 1

--\timing
--\x auto

-- table frame borders
\pset border 2
\pset linestyle unicode

-- By default, NULL is an empty space. This makes NULL values visible.
\pset null (null)

\set COMP_KEYWORD_CASE upper

-- If a command is run more than once in a row, only store it once in the history.
\set HISTCONTROL ignoredups
\set HISTSIZE 2000
-- \set VERBOSITY verbose

\set all 'select * from'
\set extensions 'select * from pg_available_extensions;'
\set version 'select version();'

\set PROMPT1 '\n%[%033[1;31m%]âž¤ %[%033[1;36m%]%n%[%033[34m%]@%[%033[1;36m%]%M:%>%[%033[1;33m%]/%/ %[%033[1;31m%]%x %[%033[K%]%[%033[0m%]\n%[%033[1;33m%]%R%#%[%033[0m%] '
\set PROMPT2 '%[%033[1;33m%]%R%#%[%033[0m%] '

\set QUIET 0
